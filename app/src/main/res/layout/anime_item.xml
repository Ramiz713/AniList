<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_anime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintVertical_bias="0"
            android:contentDescription="@string/desc_img_anime"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_anime_rank"
            style="@style/TextAppearance.CardsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_anime_name"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="@id/image_anime"
            app:layout_constraintRight_toRightOf="@id/image_anime"
            app:layout_constraintTop_toTopOf="@id/image_anime"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/tv_anime_name"
            style="@style/TextAppearance.CardsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_anime_score"
            app:layout_constraintLeft_toLeftOf="@id/image_anime"
            app:layout_constraintRight_toRightOf="@id/image_anime"
            app:layout_constraintTop_toTopOf="@id/image_anime"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tv_anime_type"
            style="@style/TextAppearance.CardsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@id/tv_anime_score"
            app:layout_constraintLeft_toLeftOf="@id/image_anime"
            app:layout_constraintRight_toRightOf="@id/image_anime"
            app:layout_constraintTop_toBottomOf="@id/tv_anime_name" />

        <TextView
            android:id="@+id/tv_anime_score"
            style="@style/TextAppearance.CardsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_star_black_16dp"
            android:drawablePadding="4dp"
            android:paddingBottom="8dp"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/image_anime"
            app:layout_constraintLeft_toLeftOf="@id/image_anime"
            app:layout_constraintRight_toRightOf="@id/image_anime"
            app:layout_constraintTop_toBottomOf="@id/tv_anime_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
